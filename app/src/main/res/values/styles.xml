<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="hobbies" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@android:color/holo_blue_bright</item>
        <item name="android:textSize">12pt</item>
    </style>
    <style name="education" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@android:color/holo_orange_dark</item>
        <item name="android:textSize">10pt</item>
    </style>
    <style name="location" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textSize">11pt</item>
    </style>
    <style name="name" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@android:color/holo_green_light</item>
        <item name="android:textSize">20pt</item>
    </style>
</resources>
